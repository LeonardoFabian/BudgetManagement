@model AccountType

@{
    ViewData["Title"] = "Create Account Type";
}



<div class="col-md-6 mx-auto">
    <h1>Crear Tipo de Cuenta</h1>   
    <h5>Las cuentas pueden ser agrupadas por tipo (Préstamos, Tarjetas de Crédito, etc.)</h5>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <form asp-controller="AccountType" asp-action="Create">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input type="text" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-3 mb-3">
                <label asp-for="OrderNumber" class="form-label"></label>
                <input type="number" asp-for="OrderNumber" class="form-control" />
                <span asp-validation-for="OrderNumber" class="text-danger"s></span>
            </div>

            <button type="submit" class="btn btn-primary">Crear</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}